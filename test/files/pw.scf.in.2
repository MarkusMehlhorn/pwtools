&control
    calculation  = 'scf',
    restart_mode = 'from_scratch',
    prefix       = 'Si',
    nstep        =  250,
    tstress      = .true.,
    tprnfor      = .true.,
    pseudo_dir   = '~/soft/espresso/pseudo_espresso',
    outdir       = '/tmp/' ,
/
&system    
    ibrav     = 2,
    celldm(1) = 10.262555,
    nat       = 2,
    ntyp      = 1,
    ecutwfc   = 25, 
    ecutrho   = 250, 
/
&electrons
    diagonalization = 'david'
    mixing_mode     = 'plain'
    mixing_beta     = 0.7 
    conv_thr        = 1.0d-8
    electron_maxstep = 200
/
